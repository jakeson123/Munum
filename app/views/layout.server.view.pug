doctype html
html(lang='es')
  head
    title #{title}
    meta(charset='utf-8')
    meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1')
    link(href='/modules/core/img/brand/logo.ico', rel='shortcut icon', type='image/x-icon')
    each cssFile in cssFiles
      link(rel='stylesheet', href=cssFile)

  body
    header(data-ng-include="'/modules/core/views/header.client.view.html'")
    section(data-ui-view)
        div(data-ng-include="'/modules/core/views/login.client.view.html'")
    footer(data-ng-include="'/modules/core/views/social.client.view.html'")

    each jsFile in jsFiles
      script(type='text/javascript', src= jsFile)
